    <template id="termo_desc" inherit_id="website_sale.products_item" name="Termo Description">
        <xpath expr="//div[hasclass('o_wsale_product_information_text')]" position="after">
            <t t-foreach="product" t-as="o">
                <t t-set="format_value" t-value="lambda v: '-' if v == -11 else v"/>

                <div t-attf-class="d-flex flex-wrap justify-content-between" >
                    <t t-if="o.termo_tip_id.grup == '1'">
                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>SC1 :</b>  </p>
                                <span class="text-center ml-5"><t t-esc="format_value(o.sc1)" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <span> <b>SC2 :</b> </span>
                                <span class="text-center"><t t-esc="format_value(o.sc2)" /></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>SC3 :</b>  </p>
                                <span class="text-center ml-5"><t t-esc="format_value(o.sc3)" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <span> <b>SC4 :</b> </span>
                                <span class="text-center"><t t-esc="format_value(o.sc4)" /></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>Fan Çapı :</b> </p>
                                <span class="text-center d-inline"><t t-esc="format_value(o.fan_cap)" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <p> <b>Fan Adet :</b> </p>
                                <span class="text-center d-inline"><t t-esc="format_value(o.fan_adet)" /></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>Yüzey Alanı :</b>  </p>
                                <span class="text-center d-inline"><t t-esc="format_value(o.yuzey)" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <p> <b>Lamel :</b> </p>
                                <span class="text-center d-inline"><t t-esc="format_value(o.lamel_aralik)" /></span>
                            </div>
                        </div>
                    </t>

                    <t t-elif="o.termo_tip_id.grup == '2'">
