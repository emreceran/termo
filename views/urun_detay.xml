<?xml version="1.0" encoding="utf-8" ?>
<data>

    <template
        id="product_detail_page"
        inherit_id="website_sale.product"
        name="Product termo"
        customize_show="True"
    >
        <!-- Yardımcı fonksiyonun tanımlandığı yer -->


        <xpath expr="//div[@id='product_attributes_simple']" position="replace">
            <t t-foreach="product" t-as="o">
                <t t-set="format_value" t-value="lambda v: '-' if v == -11 else v"/>

                <!-- 1. Koşul: VİTRİN EVAPORATÖR veya üst kategorisi -->
               <t t-if="o.filtre_grubu_id.name in ['1', '2', '3', '4', '5']">
                    <!-- Hiçbir tablo gösterme -->
                </t>

                <!-- 2. Koşul: EVAPORATÖR veya üst kategorisi -->
               <t t-if="product.filtre_grubu_id.name in ['1', '2', '3']">
                    <div>
                        <p class="" style="background-color:grey; padding:10px; line-height:2">  Kapasite Bilgileri </p>
                        <table class="table" style="text-align:left; padding:0; margin-bottom:0;">
                            <tbody style="line-height:1.5;">
                                <tr>
                                    <th scope="row">Kapasite</th>
                                    <td><t t-esc="format_value(o.kapasite)"/></td>
                                    <th scope="row">Hava Debisi</th>
                                    <td><t t-esc="format_value(o.hava_debisi)"/></td>
                                </tr>
                                <tr>
                                    <th scope="row">Oda Sıcaklığı</th>
                                    <td><t t-esc="format_value(o.oda_sicakligi)"/></td>
                                    <th scope="row">Evaporasyon Sıcaklığı</th>
                                    <td><t t-esc="format_value(o.evaporasyon_sicakligi)"/></td>
                                </tr>
                                <tr>
                                    <th scope="row">Akışkan</th>
                                    <td>R404A</td>
                                    <th scope="row">Test Basıncı</th>
                                    <td>32 bar</td>
                                </tr>
                                <tr>
                                    <th scope="row">Lamel Aralığı</th>
                                    <td><t t-esc="format_value(o.lamel_aralik)"/></td>
                                    <th scope="row">Isı Transfer Yüzey Alanı</th>
                                    <td><t t-esc="format_value(o.H)"/></td>
                                </tr>
                                <tr>
                                    <th scope="row">Fan Çapı</th>
                                    <td><t t-esc="format_value(o.fan_cap)"/></td>
                                    <th scope="row">Fan Sayısı</th>
                                    <td><t t-esc="format_value(o.fan_adet)"/></td>
                                </tr>
                                <tr>
                                    <th scope="row">Fan Devri</th>
                                    <td>1400 rpm</td>
                                    <th></th>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div>
                        <p class="" style="background-color:grey; padding:10px; line-height:2">  Ölçüler </p>
                        <table class="table mx-1 text-left" style="table-layout: fixed;">
                            <tbody style="line-height:1.5;">
                                <tr>
                                    <th scope="row">H</th>
                                    <td><t t-esc="format_value(o.H)"/></td>
                                    <th scope="row">L</th>
                                    <td><t t-esc="format_value(o.L)"/></td>
                                    <th scope="row">W</th>
                                    <td><t t-esc="format_value(o.W)"/></td>
                                    <th scope="row">H1</th>
                                    <td><t t-esc="format_value(o.H1)"/></td>
                                    <th scope="row">L1</th>
                                    <td><t t-esc="format_value(o.L1)"/></td>
                                </tr>
                                <tr>
                                    <th scope="row">W1</th>
                                    <td><t t-esc="format_value(o.W1)"/></td>
                                    <th scope="row">W2</th>
                                    <td><t t-esc="format_value(o.W2)"/></td>
                                    <th scope="row">W3</th>
                                    <td><t t-esc="format_value(o.W3)"/></td>
                                    <th scope="row">LA</th>
                                    <td><t t-esc="format_value(o.LA)"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>

                <!-- 3. Koşul: KONDENSER veya üst kategorisi -->
               <t t-if="product.filtre_grubu_id.name in ['4', '5']">
                    <div>
                        <p class="" style="background-color:grey; padding:10px; line-height:2">  Kapasite Bilgileri </p>
                        <table class="table" style="text-align:left; padding:0; margin-bottom:0;">
                            <tbody style="line-height:1.5;">
                                <tr>
                                    <th scope="row">YÜKSEK DEVİR HAVA DEBİSİ</th>
                                    <td><t t-esc="format_value(o.hava_debisi_yuksek_devir)"/></td>
                                    <th scope="row">Düşük DEVİR HAVA DEBİSİ</th>
                                    <td><t t-esc="format_value(o.hava_debisi_dusuk_devir)"/></td>
                                </tr>
                                <tr>
                                    <th scope="row">Oda Sıcaklığı</th>
                                    <td><t t-esc="format_value(o.oda_sicakligi)"/></td>
                                    <th scope="row">Evaporasyon Sıcaklığı</th>
                                    <td><t t-esc="format_value(o.evaporasyon_sicakligi)"/></td>
                                </tr>
                                <tr>
                                    <th scope="row">Akışkan</th>
                                    <td>R404A</td>
                                    <th scope="row">Test Basıncı</th>
                                    <td>32 bar</td>
                                </tr>
                                <tr>
                                    <th scope="row">Lamel Aralığı</th>
                                    <td><t t-esc="format_value(o.lamel_aralik)"/></td>
                                    <th scope="row">Isı Transfer Yüzey Alanı</th>
                                    <td><t t-esc="format_value(o.H)"/></td>
                                </tr>
                                <tr>
                                    <th scope="row">Fan Çapı</th>
                                    <td><t t-esc="format_value(o.fan_cap)"/></td>
                                    <th scope="row">Fan Sayısı</th>
                                    <td><t t-esc="format_value(o.fan_adet)"/></td>
                                </tr>
                                <tr>
                                    <th scope="row">Fan Devri</th>
                                    <td>1400 rpm</td>
                                    <th></th>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div>
                        <p class="" style="background-color:grey; padding:10px; line-height:2">  Ölçüler </p>
                        <table class="table mx-1 text-left" style="table-layout: fixed;">
                            <tbody style="line-height:1.5;">
                                <tr>
                                    <th scope="row">H</th>
                                    <td><t t-esc="format_value(o.H)"/></td>
                                    <th scope="row">W</th>
                                    <td><t t-esc="format_value(o.W)"/></td>
                                    <th scope="row">L</th>
                                    <td><t t-esc="format_value(o.L)"/></td>
                                    <th scope="row">W1</th>
                                    <td><t t-esc="format_value(o.W1)"/></td>
                                </tr>
                                <tr>
                                    <th scope="row">H1</th>
                                    <td><t t-esc="format_value(o.H1)"/></td>
                                    <th scope="row">H2</th>
                                    <td><t t-esc="format_value(o.H2)"/></td>
                                    <th scope="row">L1</th>
                                    <td><t t-esc="format_value(o.L1)"/></td>
                                </tr>
                                <tr>
                                    <th colspan="2" scope="row">KONDENSER GİRİŞ KOLLEKTÖR ÇAPI mm / inc</th>
                                    <td ><t t-out="format_value(o.kondenser_giris_cap)"/></td>
                                    <th  colspan="2" scope="row">KONDENSER ÇIKIŞ KOLLEKTÖR ÇAPI mm / inc</th>
                                    <td><t t-out="format_value(o.kondenser_cikis_cap)"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>

                <!-- Diğer ürünler için (varsayılan davranış) -->
                <t t-else="">
                    <!-- Buraya varsayılan tabloları veya içerikleri ekleyebilirsiniz -->
                </t>

            </t>
        </xpath>
    </template>






    <template id="grid_views" name="Ggg">
        <div>
            <p>grid</p>
        </div>
    </template>

    <template id="list_views" name="Lll">
        <div>
            <p>List</p>
        </div>
    </template>

