    <template id="termo_desc" inherit_id="website_sale.products_item"  name="Termo Description">
        <xpath expr="//div[hasclass('o_wsale_product_information_text')]" position="after">

            <t t-foreach="product" t-as="o">

                <div t-attf-class="d-flex flex-wrap justify-content-between" >
                    <t t-if="o.termo_tip_id.grup=='1'">
                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>SC1 :</b>  </p> <span class="text-center ml-5" ><t t-out="o.sc1" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <span> <b>SC2 :</b> </span>
                                <span class="text-center" ><t t-out="o.sc2" /></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>SC3 :</b>  </p> <span class="text-center ml-5" ><t t-out="o.sc3" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <span> <b>SC4 :</b> </span>
                                <span class="text-center" ><t t-out="o.sc4" /></span>
                            </div>

                        </div>
                    </t>

                    <t t-elif="o.termo_tip_id.grup=='2'">
                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p class="text-center"> <b>To / Te  -35°C/-40°C  W :</b>   </p> <span class="text-center ml-5" ><t t-out="o.t1" /></span>

                            </div>

                            <div class="d-flex justify-content-around">
                                <p class="text-center"> <b>To / Te  -40°C/-45°C  W :</b>   </p>
                                <span class="text-center" ><t t-out="o.t2" /></span>
                            </div>

                        </div>
                    </t>


                    <t t-if="o.termo_tip_id.grup=='3'">
                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>SC1 :</b>  </p> <span class="text-center ml-5" ><t t-out="o.sc1" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <span> <b>SC2 :</b> </span>
                                <span class="text-center" ><t t-out="o.sc2" /></span>
                            </div>
                        </div>

                    </t>

                     <t t-if="o.termo_tip_id.grup=='4'">
                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>Kapasite YÜKSEK DEVİR(H) :</b>  </p> <span class="text-center ml-5" ><t t-out="o.kapasiteyuksek_devir" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <span> <b>KapasiteDÜŞÜK DEVİR (L) :</b> </span>
                                <span class="text-center" ><t t-out="o.kapasite_dusuk_devir" /></span>
                            </div>
                        </div>

                    </t>






                    <div class="col">

                        <div class="d-flex  justify-content-around">
                            <p> <b>Fan Çapı :</b> </p>
                            <span class="text-center d-inline" ><t t-out="o.fan_cap" /></span>
                        </div>

                        <div class="d-flex  justify-content-around">
                            <p> <b>Fan Adet :</b> </p>
                            <span class="text-center d-inline" ><t t-out="o.fan_cap" /></span>
                        </div>

                    </div>

                    <div class="col">
                        <div class="d-flex justify-content-around">
                            <p> <b>Yüzey Alanı :</b>  </p> <span class="text-center d-inline" ><t t-out="o.yuzey" /></span>

                        </div>

                        <div class="d-flex justify-content-around">
                            <p> <b>Lamel  :</b> </p>
                            <span class="text-center d-inline" ><t t-out="o.lamel_aralik" /></span>
                        </div>

                    </div>








                </div>
            </t>
        </xpath>
