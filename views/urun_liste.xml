<?xml version="1.0" encoding="utf-8" ?>
<data>

    <template id="termo_desc" inherit_id="website_sale.products_item" name="Termo Description">
        <xpath expr="//div[hasclass('o_wsale_product_information_text')]" position="after">
            <t t-foreach="product" t-as="o">
                <t t-set="format_value_with_unit" t-value="lambda v, unit: ('-' if v in [-11, ''] else str(v) + ' ' + unit )"/>

                <t t-set="format_value" t-value="lambda v: '-' if v == -11 else v"/>

                <div t-attf-class="d-flex flex-wrap justify-content-between" >
                    <t t-if="o.termo_tip_id.grup == '1'">
                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>SC1 :</b></p>
                                <span class="text-center ml-5"><t t-esc="format_value_with_unit(o.sc1, 'W')" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <p> <b>SC2 :</b></p>
                                <span class="text-center"><t t-esc="format_value_with_unit(o.sc2, 'W')" /></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>SC3 :</b></p>
                                <span class="text-center"><t t-esc="format_value_with_unit(o.sc3, 'W')" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <p> <b>SC4 :</b></p>
                                <span class="text-center"><t t-esc="format_value_with_unit(o.sc4, 'W')" /></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>Fan Çapı :</b></p>
                                <span class="text-center"><t t-esc="format_value_with_unit(o.fan_cap, 'mm')" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <p> <b>Fan Adet :</b></p>
                                <span class="text-center"><t t-esc="format_value_with_unit(o.fan_adet, ' ')" /></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>Yüzey Alanı :</b></p>
                                <span class="text-center"><t t-esc="format_value_with_unit(o.yuzey,'&#13221;')" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <p> <b>Lamel :</b></p>
                                <span class="text-center"><t t-esc="format_value_with_unit(o.hatve,'mm')" /></span>
                            </div>
                        </div>
                    </t>

                    <t t-elif="o.termo_tip_id.grup == '2'">
                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p class="text-center"> <b>To / Te -35°C / -40°C : W </b> </p>
                                <span class="text-center ml-5"><t t-esc="format_value_with_unit(o.t1, 'W')"/></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <p class="text-center"> <b>To / Te -40°C / -45°C : W </b> </p>
                                <span class="text-center ml-5"><t t-esc="format_value_with_unit(o.t2, 'W')"/></span>

                            </div>
                        </div>

                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>Fan Çapı :</b> </p>
                                <span class="text-center d-inline"><t t-esc="format_value_with_unit(o.fan_cap, 'mm')" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <p> <b>Fan Adet :</b> </p>
                                <span class="text-center d-inline"><t t-esc="format_value(o.fan_adet)" /></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>Yüzey Alanı :</b>  </p>
                                <span class="text-center d-inline"><t t-esc="format_value_with_unit(o.yuzey,'&#13221;')"/></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <p> <b>Lamel :</b> </p>
                                <span class="text-center d-inline"><t t-esc="format_value(o.lamel_aralik)" /></span>
                            </div>
                        </div>
                    </t>

                    <t t-elif="o.termo_tip_id.grup == '3'">
                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>SC1 :</b>  </p>
                                <span class="text-center ml-5"><t t-esc="format_value_with_unit(o.sc1, 'W')" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <span> <b>SC2 :</b> </span>
                                <span class="text-center"><t t-esc="format_value_with_unit(o.sc2, 'W')" /></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>Fan Çapı :</b> </p>
                                <span class="text-center d-inline"><t t-esc="format_value_with_unit(o.fan_cap, 'mm')" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <p> <b>Fan Adet :</b> </p>
                                <span class="text-center d-inline"><t t-esc="format_value(o.fan_adet)" /></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>Yüzey Alanı :</b>  </p>
                                <span class="text-center d-inline"><t t-esc="format_value_with_unit(o.yuzey,'&#13221;')"/></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <p> <b>Lamel :</b> </p>
                                <span class="text-center d-inline"><t t-esc="format_value(o.lamel_aralik)" /></span>
                            </div>
                        </div>
                    </t>

                    <t t-if="o.termo_tip_id.grup in ['4', '5']">
                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>Kapasite Yüksek Devir (H) :</b>  </p>
                                <span class="text-center ml-5"><t t-esc="format_value(o.kapasite_yuksek_devir)" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <span> <b>Kapasite Düşük Devir (L) :</b> </span>
                                <span class="text-center"><t t-esc="format_value(o.kapasite_dusuk_devir)" /></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>Fan Çapı :</b> </p>
                                <span class="text-center d-inline"><t t-esc="format_value(o.fan_cap)" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <p> <b>Fan Adet :</b> </p>
                                <span class="text-center d-inline"><t t-esc="format_value(o.fan_adet)" /></span>
                            </div>
                        </div>

                        <div class="col">
                            <div class="d-flex justify-content-around">
                                <p> <b>Yüzey Alanı :</b>  </p>
                                <span class="text-center d-inline"><t t-esc="format_value(o.yuzey)" /></span>
                            </div>

                            <div class="d-flex justify-content-around">
                                <p> <b>Lamel :</b> </p>
                                <span class="text-center d-inline"><t t-esc="format_value(o.lamel_aralik)" /></span>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </xpath>
    </template>




</data>
