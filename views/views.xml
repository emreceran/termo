                                <field name="fan_adet" />
                                <field name="fan_cap" />
                                <field name="hava_debisi" />


                            </group>

                            <group>
                                <field name="H" />
                                <field name="L" />
                                <field name="W" />
                                <field name="H1" />
                                <field name="L1" />
                                <field name="W1" />
                                <field name="W2" />
                                <field name="W3" />
                                <field name="LA" />
                                <field name="hatve" />
                            </group>

                            <group>

                                <field name="kapasiteyuksek_devir"/>
                                <field name="kapasite_dusuk_devir"/>
                                <field name="hava_debisi_yuksek_devir"/>
                                <field name="hava_debisi_dusuk_devir"/>

                            </group>
                        </group>

                    </page>
                </xpath>
            </field>
